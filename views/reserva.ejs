<%- include('inc/header') %>
<%- include('inc/navbar') %>

<% if (!user) { %>
  <script>
    window.location.href = "/login";
  </script>
<% } %>

<section class="reservation-section">
    <div class="container">
        <h2 class="reservation-title">Reserva tu Mesa</h2>
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card reservation-card">
                    <form id="reservation-form">
                        <div class="mb-3">
                            <label for="date" class="form-label">Fecha</label>
                            <input type="date" class="form-control" id="date">
                        </div>
                        <div class="mb-3">
                            <label for="time" class="form-label">Hora</label>
                            <input type="time" class="form-control" id="time">
                        </div>
                        <div class="mb-3">
                            <label for="guests" class="form-label">Número de Personas</label>
                            <input type="number" class="form-control" id="guests" placeholder="¿Cuántos asistirán?" min="1">
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Reservar Ahora</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- SweetAlert2 JS -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/js/reserva.js"></script>

<%- include('inc/footer') %>
